{% extends 'base.html.twig' %}

{% block title %}
Liste des commentaires :
{% endblock %}

{% block body %}
    <br><br>
    <h1>Liste des commentaires :</h1>

<lu>
<li><a href=" {{ path('nouvelCommentaire_index') }}"> Nouvel commentaire : </a></li>
</lu>

    <br><br>

<table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Contenu</th>
                 <th>Auteurs</th>
                                <th>Modifier</th>
            <th>Afficher</th>
            <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaire %}
            <tr>
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.date|date("d/m/Y") }}</td>
                                <td>{{ commentaire.auteur }}</td>
<td>
                    <a href="{{ path('modifierCommentaire_index', {'id': commentaire.id }) }}">Modifier</a>
                </td>
                    <td>
                    <a href="{{ path('afficherCommentaire_index', {'id': commentaire.id}) }}">Afficher</a>
                    </td>
            <td>
                    <a href="{{ path('supprimerCommentaire_index', {'id': commentaire.id}) }}">Supprimer</a>
                    </td>
                        </tr>
        {% else %}
            <tr>
                <td colspan="7">Pas d'Utulisateurs</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('nouvelUtilisateur_index') }}">Enregistrement d'in nouvel utilisateur :</a>
{% endblock %}
